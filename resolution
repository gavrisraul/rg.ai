#!/bin/bash

xrandr

cvt 1792 1008

xrandr --newmode "1792x1008_60.00"  149.50  1792 1904 2088 2384  1008 1011 1016 1046 -hsync +vsync

xrandr --addmode eDP-1 "1792x1008_60.00"

xrandr --output eDP-1 --mode "1792x1008_60.00"

# cp resolution ~/.local/bin/

# sudo cp resolution /usr/bin/

# sudo chmod u+s /usr/bin/xrandr

